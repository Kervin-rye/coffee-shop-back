// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int     @id @default(autoincrement())
  name  String
  price Int
  orders Order[]
}

model Order {
  id          Int       @id @default(autoincrement())
  status      String    @default("pending")
  quantity    Int
  products Product[]
}
